<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="peterfajdiga.sszj.sections.AboutFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_logo_bright"/>

    <TextView
        android:layout_weight="0"
        android:text="@string/about_authors"
        style="@style/ContentText.Normal" />

    <TextView
        android:layout_weight="0"
        android:text="@string/about_web"
        style="@style/ContentText.Normal" />

    <Button
        android:layout_weight="0"
        android:id="@+id/about_web_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/about_web_link" />

</LinearLayout>
